@using Globomantics.Core.IndAcc.Areas.Identity.Data
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<span class="dvider"></span>

@if (SignInManager.IsSignedIn(User))
{
    <div class="sign">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a>
                <li role="separator" class="divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                        <button type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                </li>

            </ul>
        </li>
    </div>
}
else
{
    <div class="sign">
        <a asp-area="Identity" asp-page="/Account/Login">
            <img class="sign-in-img" src="/images/avatar.svg" alt="sign-in">
            Sign-in
        </a>
    </div>
}

